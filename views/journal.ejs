<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/lofi_style.css">
    <title>Faith Journal</title>
</head>

<body>
    <% if (user) { %>
        <p>Welcome, user ID: <%= user %></p>
        <hr>
    <% } %>
    <% if (isAdmin) { %>
        <form action="/journal/new" method="POST">
            <input type="text" name="title" placeholder="Title or Date" required><br>
            <textarea name="content" rows="10" cols="50" placeholder="Write your journal entry..." required></textarea><br>
            <button type="submit">Add Entry</button>
        </form>
        <a href="/logout">Logout</a>
    <% } else { %>
        <a href="/login">Admin Login</a>
    <% } %>

    <header>
        <nav>
            <ul>
                <button onclick="window.location.href='myTestimony'">My Testimony</button>
                <button onclick="window.location.href='/blog'">Go Back</button>
            </ul>
        </nav>
    </header>
    <h1>Coleman's Faith Journal</h1>
    <main>
        <% if (journalEntries && journalEntries.length > 0) { %>
            <% journalEntries.forEach(entry => { %>
                <h2><%= entry.title %></h2>
                <p><%= entry.content %></p>
            <% }); %>
        <% } else { %>
            <p>No journal entries yet. Add one above!</p>
        <% } %>
    </main>

</body>

</html>